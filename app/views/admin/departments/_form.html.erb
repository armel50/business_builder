<% if @department && @department.errors.any? %>
    <div id="error_explanation" class= "ui floating message">
    <h2>
      <%= pluralize(@department.errors.count, "error") %>
      prohibited the creation of this business:
    </h2>

    <ul>
    <% @department.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h1 class = "ui header center aligned">Add a new department</h1>
<hr class = "style-seven">
<div class = "ui container">
<%=form_for @department,:html => {:class => "ui large form" }, url: "/businesses/#{@business.id}/departments" do |f| %>
    <div class= "field">
    <label>Department Name</label>
    <%=f.text_field :name%>
    <%= f.submit "Create Department", class: "ui primary button fluid"%>
    </div>
<%end%>
</div>