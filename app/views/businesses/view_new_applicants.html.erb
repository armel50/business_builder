<h1> If you are a business owner this is the guys who wants to get in</h1>

<h3> If you choose to accept please chosse the department </h3>


       <%= @business.name %> 
        <h6>This business has <%= pluralize(@applicants.size, "application")%> </h6>
        <hr>

        <br>

        <%@applicants.each do |applicant|%>
            <%= applicant.name %> 
            <button class= "accept">Accept</button>
            <br>
             <div class= "departments hidden menu">
                <h3>Choose a department for <%= applicant.name %></h3>
                <%@business.departments.each do |department|%>
                    <%= link_to "assign #{applicant.name} to #{department.name}","/add/#{applicant.id}/departments/#{department.id}" , method: :post%>
                <% end %>
             </div>
            <br>
            <%= link_to "Delete #{applicant.name}'s application", "businesses/#{@business.id}/apply", method: :delete %>
               
        <%end%>


    <script>
      var  accept =  $("button.accept")
      var department = $("div.departments")

       accept.on("click", function(){
           department.removeClass("hidden menu")
       }) 
    </script>